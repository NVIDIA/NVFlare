{
  "format_version": 2,
  
  "components": [
    {
      "id": "xgb_learner",
      "path": "nvflare.app_opt.xgboost.learner.XGBFedLearner",
      "args": {
        "train_data": "higgs.train.csv?format=csv&label_column=0",
        "test_data": "higgs.test.csv?format=csv&label_column=0",
        "num_rounds": 100,
        "xgboost_params": {
          "max_depth": 8,
          "eta": 0.1,
          "objective": "binary:logistic",
          "eval_metric": "auc",
          "tree_method": "hist",
          "nthread": 16
        }
      }
    }
  ],

  "executors": [
    {
      "tasks": [
        "train"
      ],
      "executor": {
        "id": "Executor",
        "path": "nvflare.app_common.executors.learner_executor.LearnerExecutor",
        "args": {
          "learner_id": "xgb_learner"
        }
      }
    }
  ],

  "task_result_filters": [],
  "task_data_filters": []
}
