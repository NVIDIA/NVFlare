{
  "format_version": 2,
  "min_clients": 2,
  "task_data_filters": [],
  "task_result_filters": [],
  "components": [
    {
      "id": "assessor",
      "path": "nvflare.edge.assessors.model_update.ModelUpdateAssessor",
      "args": {
        "persistor_id": "persistor",
        "max_model_version": 10,
        "max_model_history": 1,
        "num_updates_for_model": 16,
        "device_selection_size": 16,
        "min_hole_to_fill": 16,
        "device_reuse": true
      }
    },
    {
      "id": "persistor",
      "path": "nvflare.app_opt.pt.file_model_persistor.PTFileModelPersistor",
      "args": {
        "model": {
          "path": "nvflare.edge.models.model.Cifar10ConvNet",
          "args": {}
        }
      }
    },
    {
      "id": "evaluator",
      "path": "nvflare.edge.widgets.evaluator.GlobalEvaluator",
      "args": {
          "model_path": "nvflare.edge.models.model.Cifar10ConvNet",
          "torchvision_dataset": {
              "name": "CIFAR10",
              "path": "/tmp/nvflare/datasets/cifar10"
          }
      }
    }
  ],
  "workflows": [
    {
      "id": "scatter_and_gather",
      "path": "nvflare.edge.controllers.sage.ScatterAndGatherForEdge",
      "args": {
        "num_rounds": 1,
        "assessor_id": "assessor",
        "task_name": "train"
      }
    }
  ]
}