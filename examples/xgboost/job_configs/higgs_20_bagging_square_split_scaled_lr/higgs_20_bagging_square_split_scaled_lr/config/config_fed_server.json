{
  "format_version": 2,

  "server": {
    "heart_beat_timeout": 600
  },

  "task_data_filters": [],
  "task_result_filters": [],

  "components": [
    {
      "id": "persistor",
      "path": "custom.xgboost_model_persistor.XGBoostModelPersistor",
      "args": {
        "save_name": "xgboost_model.json"
      }
    },
    {
      "id": "shareable_generator",
      "name": "FullModelShareableGenerator",
      "args": {}
    },
    {
      "id": "aggregator",
      "path": "custom.xgboost_bagging_aggregator.XGBoostBaggingAggregator",
      "args": {}
    }
  ],
  "workflows": [
    {
      "id": "scatter_and_gather",
      "name": "ScatterAndGather",
      "args": {
        "min_clients": 20,
        "num_rounds": 101,
        "start_round": 0,
        "wait_time_after_min_received": 10,
        "aggregator_id": "aggregator",
        "persistor_id": "persistor",
        "shareable_generator_id": "shareable_generator",
        "train_task_name": "train",
        "train_timeout": 0
      }
    }
  ]
}
