{
  "format_version": 2,
  "min_clients": 2,
  "num_rounds": 5,
  "config_path": "config/megatron_gpt_sft.yaml",
  "base_model_file_path": "/model/nemo-megatron-gpt-345m/megatron_gpt_345m.nemo",
  "server": {
    "heart_beat_timeout": 600
  },
  "task_data_filters": [],
  "task_result_filters": [],
  "components": [
    {
      "id": "persistor",
      "name": "PTFileModelPersistor",
      "args": {
        "model": {
          "path": "custom.server_model.ServerModelSFT",
          "args": {
            "config_path": "{config_path}",
            "base_model_file_path": "{base_model_file_path}"
          }
        }
      }
    },
    {
      "id": "shareable_generator",
      "name": "FullModelShareableGenerator",
      "args": {}
    },
    {
      "id": "aggregator",
      "name": "InTimeAccumulateWeightedAggregator",
      "args": {}
    },
    {
      "id": "model_selector",
      "name": "IntimeModelSelector",
      "args": {
        "weigh_by_local_iter": true
      }
    }
  ],
  "workflows": [
    {
      "id": "share_config",
      "path": "custom.share_config_sft.ShareConfigSFT",
      "args": {
        "config_path": "{config_path}",
        "task_name": "share_config",
        "min_responses_required": "{min_clients}"
      }
    },
    {
      "id": "scatter_and_gather",
      "name": "ScatterAndGather",
      "args": {
        "min_clients": "{min_clients}",
        "num_rounds": "{num_rounds}",
        "start_round": 0,
        "wait_time_after_min_received": 10,
        "aggregator_id": "aggregator",
        "persistor_id": "persistor",
        "shareable_generator_id": "shareable_generator",
        "train_task_name": "train",
        "train_timeout": 0
      }
    }
  ]
}